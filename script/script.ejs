                    txt : document.getElementById(`msg_${msg_type}`).value,
                    msg_type : msg_type,
                    date : "Sometime",
                    sender : username,
                    receiver : receiver
                }));
                document.getElementById(`msg_${msg_type}`).value = "";
                document.getElementById(`chats_i_${msg_type}`).scrollTo(0, document.getElementById(`chats_i_${msg_type}`).scrollHeight);
            }
